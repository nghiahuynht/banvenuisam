@model List<DAL.Models.TicketOrder.PrintPdfOrderModel>
@{
    Layout = null;
}
@{
    string ngayinve = DateTime.Now.ToString("dd/MM/yyyy HH:mm:ss ");
}


@{
    foreach (var item in Model)
    {
        
        <!DOCTYPE html>

        <html>
        <head>
            <meta charset="UTF-8">
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
            <title>Thông tin vé</title>
            <link href="~/css/print-bill-sizecss.css" rel="stylesheet" />
            <style>
     
                body {
                    font-size: 11pt;
                    padding:0px;margin:0px;
                }

                #back-print {
                    /* border: 1px solid #fff;*/
                    /*width: 100%;*/
                    height: auto;
                    text-align: left;
                    page-break-after: always;
                    display: block;
                    clear: both;
                }

                .frame-print {
                    background: #fff;
                    /*  border: 1px solid #000;*/
                    /*text-align: left !important;*/
                }

                .line {
                    width: 100%;
                    height: 1px;
                    border-bottom: 1px solid #000;
                    margin-top: 2px;
                    margin-bottom: 2px;
                }

                .text-center {
                    text-align: center;
                }

                .fS28 {
                    font-size: 28px
                }

                .fS25 {
                    font-size: 25px
                }

                .fS23 {
                    font-size: 16px
                }

                .fS22 {
                    font-size: 22px
                }

                .fS21 {
                    font-size: 21px
                }

                .fS20 {
                    font-size: 20px
                }

                .fS18 {
                    font-size: 18px
                }

                .fS17 {
                    font-size: 17px
                }

                .fS15 {
                    font-size: 15px
                }

                .fS11 {
                    font-size: 11px
                }

                .fS12 {
                    font-size: 12px
                }

                .fS9 {
                    font-size: 9px
                }

                .wtd35 {
                    width: 35%
                }

                .wtd30 {
                    width: 30%
                }

                .wtd25 {
                    width: 25%
                }

                .wtd65 {
                    width: 75%
                }

                .wtd100 {
                    width: 100%
                }

                .wtdpx100 {
                    width: 130px
                }

                .heipx100 {
                    width: 130px
                }

                .pad-top10 {
                    padding-top: 10px
                }

                .bold {
                    font-weight: bold
                }
            </style>
        </head>
        <body>
            <div id="back-print">
                <div class="frame-print" style="border:1px solid #000;width:330px;height:auto;padding-bottom:20px;">

                    <table class="fS11" style="width:100%;border-bottom:1px solid #000;">
                        <tr>
                            <td class="wtd25 fS23" style="text-align:center">
                                <img src="~/img/logo-ve-nuisam.png" width="70" height="60" />
                            </td>
                            <td class="wtd65 fS18" style="text-align:left">
                                <small style="color: #000000;font-size:10pt;"><b>KHU DU LỊCH QUỐC GIA NÚI SAM</b></small> <br />
                                <small style="color: #000000;font-size:9pt;">Đường số 4, KDC chợ Vĩnh Đông, P. Núi Sam, TP. Châu Đốc, tỉnh An Giang</small><br />
                                <small style="color: #000000;font-size:10pt;">MST: 1601204666-006</small>
                            </td>

                        </tr>
                    </table>
                    <br />
                    <table class="fS11" style="width:100%;">

                        <tr>
                            <th class="wtd35 fS20" style="text-align:center;">Số lượng</th>
                            <th class="wtd30 fS20" style="text-align:center">Giá</th>
                            <th class="wtd35 fS20" style="text-align:center">Thành tiền</th>
                        </tr>
                        <tr>
                            <td class="wtd35 fS20" style="text-align:center">@(item.Quanti.ToString("#,##0").Replace(",","."))</td>
                            <td class="wtd30 fS20" style="text-align:center">@(item.Price.ToString("#,##0").Replace(",", "."))</td>
                            <td class="wtd35 fS20" style="text-align:center">@(item.TotalAfterDiscounted.Value.ToString("#,##0").Replace(",", "."))</td>
                        </tr>


                        <tr>
                            <td colspan="3" class="pad-top10" style="text-align:center;">
                                <span class="fS23">Bằng chữ: @(item.TotalByText)</span><br />
                            </td>
                        </tr>
                        @{
                            var txtDate = item.CreatedDate.HasValue ? $"Ngày {item.CreatedDate.Value.ToString("dd/MM/yyyy HH:mm tt")}" : "";
                            <tr>
                                <td colspan="3" style="text-align:center;font-size:12pt;">@(txtDate)</td>
                            </tr>
                        }
                        <tr>
                            <td colspan="3" style="text-align:center;"><strong class="fS15">(Vé chỉ có giá trị sử dụng 1 lần)</strong></td>
                        </tr>
                    </table>

                    <br />
                    <table class="wtd100">
                        <tr>
                            <td style="width:70%">
                                <small>Mã đơn: </small><strong class="fS18">@(item.OrderId)</strong><br />
                                <small>Số vé: </small><strong class="fS18">@(item.SubId)</strong><br />
                                <small>Mã tra cứu: </small><br /><strong class="fS16">@(item.SubOrderCode)</strong><br />
                                <br />
                            </td>
                            <td style="width:30%">
                                <img src="~/QRCode/@(item.SubId).jpg" style="width:100%;" />
                            </td>

                        </tr>

                    </table>
                    <table style="width: 100%; padding-left:10px;" class="fS18">
                        <tr>
                            <td width="90%" colspan="2" style="text-align: center;">
                                <small style="border-bottom:0px;">Truy cập link:</small> <u class="fS18"><strong>mily.vn/baotangthuvienbrvt</strong></u>, <small>chọn tra cứu theo mã khách hàng và nhập mã vé để nhận biên lai điện tử</small>
                            </td>
                        </tr>
                    </table>
                    <table style="width: 100%; padding-left:10px;padding-bottom:10px;border-bottom:1px solid #000;" class="fS18">
                        <tr>
                            <td width="90%" colspan="2" style="text-align: center;">
                                <strong style="font-size:12pt;">Chúc quý khách có chuyến thăm quan vui vẻ và nhiều ý nghĩa !</strong>
                            </td>
                        </tr>
                    </table>

                </div>
            </div>

        </body>
    </html>

}
}




