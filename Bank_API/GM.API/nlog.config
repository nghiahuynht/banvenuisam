<?xml version="1.0" encoding="utf-8"?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <extensions>
    <add assembly="Microsoft.ApplicationInsights.NLogTarget" />
  </extensions>
	<targets>
		<target name="webApplicationLogFile" xsi:type="File"
				fileName="${basedir}/logs/WebAPI_${shortdate}.log"
				archiveFileName="${basedir}/logs/archives/WebAPI.{#}.log"
				archiveEvery="Day"
				archiveNumbering="Date"
				archiveDateFormat="yyyyMMdd"
				archiveAboveSize="20000000"
				layout="${longdate}|${uppercase:${level}}|${logger}|${windows-identity}|${message}"
				enableArchiveFileCompression="true"
				concurrentWrites="true"
				keepFileOpen="false" />
	</targets>
  <rules>
    <logger name="*" minlevel="Trace" writeTo="webApplicationLogFile" />
  </rules>
</nlog>